{
  "name": "reaper-network",
  "version": "0.0.1",
  "description": "reaper-network",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inanisumbra/reaper-network.git "
  },
  "license": "MIT",
  "scripts": {
    "hardhat:node": "npx hardhat node",
    "hardhat:compile": "npx hardhat compile",
    "hardhat:test": "npx hardhat test",
    "build": "npm run hardhat:compile && gatsby build",
    "start": "concurrently \"npm run hardhat:node\" \"gatsby develop\"",
    "serve": "gatsby serve",
    "format": "prettier  --ignore-path .gitignore ./ --write \"./**/*.{js,jsx,json,md}\"",
    "lint": "eslint --ext .js --ignore-path .gitignore ./",
    "lint:fix": "eslint --fix --ext .js --ignore-path .gitignore ./",
    "commit:pre": "npm run hardhat:test && npm run lint:fix && npm run build && npm run format && git add ."
  },
  "dependencies": {
    "@emotion/react": "latest",
    "@emotion/styled": "latest",
    "@fontsource/source-sans-pro": "latest",
    "@openzeppelin/contracts": "latest",
    "autoprefixer": "latest",
    "concurrently": "latest",
    "gatsby": "latest",
    "gatsby-image": "latest",
    "gatsby-plugin-emotion": "latest",
    "gatsby-plugin-manifest": "latest",
    "gatsby-plugin-sharp": "latest",
    "gatsby-source-filesystem": "latest",
    "react": "latest",
    "react-dom": "latest",
    "tailwindcss": "latest",
    "twin.macro": "latest",
    "unfetch": "latest"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@nomiclabs/hardhat-ethers": "latest",
    "@nomiclabs/hardhat-waffle": "latest",
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "babel-preset-gatsby": "latest",
    "chai": "latest",
    "dotenv": "^16.4.5",
    "eslint": "^7.32.0",
    "eslint-plugin-filenames": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "ethereum-waffle": "latest",
    "ethers": "latest",
    "hardhat": "latest",
    "mocha": "latest",
    "pre-commit": "latest",
    "prettier": "latest",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "globals": {
      "tw": true,
      "artifacts": true,
      "task": true
    },
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "plugins": [
      "react-hooks",
      "filenames",
      "import"
    ],
    "env": {
      "es6": false,
      "node": true
    },
    "parserOptions": {
      "requireConfigFile": false,
      "sourceType": "module",
      "ecmaVersion": 8
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": "error",
      "no-mixed-spaces-and-tabs": "off"
    }
  },
  "babel": {
    "presets": [
      [
        "babel-preset-gatsby",
        {
          "targets": {
            "browsers": [
              ">0.25%",
              "not dead"
            ]
          }
        }
      ]
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    }
  },
  "pre-commit": [
    "commit:pre"
  ]
}
